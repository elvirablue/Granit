extends layouts/default

block variables
    - title = 'ГРАНИТ: Аренда спецтехники'
    - calculationTitle = ''
    - formFields = []
    - isSectionMainAddText = true
block content
    include ../blocks/modules/section-main/section-main

    div.empty-separator
    section.about
        div.container
            +section-title('О компании')
            div.row
                div.col-6.col-sm-12
                    div.h2 Основу компании
                    div.about__text
                        div.text-contents
