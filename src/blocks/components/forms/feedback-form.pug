form.form(role='form' method='GET')
    div.__title
        div.h3 Заполните форму
    div.__fields
        each item in formFields
            div.form__fields-item
                +input(item.value, item.label, item.name, item.type, item.required)
                div.error Example error text
    div.__actions
        +checkbox('Я согласен(а) на обработку персональных данных', 'agreement', true)
        button.button.-radius.-accent.full-width(type='submit')
            span Отправить заявку
            +svg('upload').s-24