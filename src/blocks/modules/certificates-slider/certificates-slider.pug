div#certificatesCarousel.certificates__slider
    div.glide
        div.glide__track(data-glide-el="track")
            ul#certificatesViewer.glide__slides
                each item, index in certificatesList
                    li.glide__slide
                        figure.certificate-slide
                            +img(item.img)
                            figcaption
                                div.certificate-slide__title #{index + 1} #{item.title}
                                div.certificate-slide__description #{item.description}

        div.glide__arrows(data-glide-el="controls")
            div.glide__arrow.glide__arrow--left(data-glide-dir="<")
                button.slider__button--prev
                    +svg('slider-arrow').s-48
            div.glide__arrow.glide__arrow--right(data-glide-dir=">")
                button.slider__button--next
                    +svg('slider-arrow').s-48

        div.glide__bullets(data-glide-el="controls[nav]")
            each item, index in certificatesList
                button.glide__bullet(data-glide-dir="=" + index)
