-
    formFields = [
        {value: '', label: 'имя', name: 'name', type: 'text', required: 'true'},
        {value: '', label: 'Номер телефона', name: 'phone', type: 'tel', required: 'true'},
        {value: '', label: 'комментарии', name: 'phone', type: 'textarea', required: 'false'},
